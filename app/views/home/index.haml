.w3-content.w3-black{:style => "max-width:1500px;"}
  / Header with Slideshow
  %header.w3-display-container.w3-center
    %button.w3-button.w3-block.w3-green.w3-hide-large.w3-hide-medium{:onclick => "document.getElementById('download').style.display='block'"}
      Download
      %i.fa.fa-android
      %i.fa.fa-apple
      %i.fa.fa-windows
    .mySlides.w3-animate-opacity
      %img.w3-image
        = image_tag('app.jpg', :height => "1000", :style => "min-width:500px", :width => "1500")
      .w3-display-left.w3-padding.w3-hide-small{:style => "width:35%"}
        .w3-black.w3-opacity.w3-hover-opacity-off.w3-padding-large.w3-round-large
          %h1.w3-xlarge The most popular track of your favourite artist on Spotify!
          %hr.w3-opacity/
          %p Just put your telephone number and the name of your favourite artist
          %p
            %button.w3-button.w3-block.w3-green.w3-round{:onclick => "document.getElementById('download').style.display='block'"}
              Download
              %i.fa.fa-android
              %i.fa.fa-apple
              %i.fa.fa-windows

  #download.w3-modal.w3-animate-opacity
    .w3-modal-content{:style => "padding:32px"}
      .w3-container.w3-white
        %i.fa.fa-remove.w3-xlarge.w3-button.w3-transparent.w3-right.w3-xlarge{:onclick => "document.getElementById('download').style.display='none'"}
        %h2.w3-wide DOWNLOAD
        %p Download the app in AppStore, Google Play or Microsoft Store.
        %i.fa.fa-android.w3-large
        %i.fa.fa-apple.w3-large
        %i.fa.fa-windows.w3-large
        %p
          %input.w3-input.w3-border{:placeholder => "Enter e-mail", :type => "text"}/
        %button.w3-button.w3-block.w3-padding-large.w3-red.w3-margin-bottom{:onclick => "document.getElementById('download').style.display='none'", :type => "button"} Fake Download

  :javascript
    // Slideshow
    var slideIndex = 1;
    showDivs(slideIndex);
    
    function plusDivs(n) {
      showDivs(slideIndex += n);
    }
    
    function showDivs(n) {
      var i;
      var x = document.getElementsByClassName("mySlides");
      if (n > x.length) {slideIndex = 1}    
      if (n < 1) {slideIndex = x.length}
      for (i = 0; i < x.length; i++) {
         x[i].style.display = "none";  
      }
      x[slideIndex-1].style.display = "block";  
    }
